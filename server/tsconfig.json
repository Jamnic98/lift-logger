{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "config/*": ["./config/*"],
      "db/*": ["./db/*"],
      "middlewares/*": ["./middlewares/*"],
      "modules/*": ["./modules/*"],
      "types/*": ["./types/*"],
      "app": ["./app"]
    }
  },
  "include": ["src/**/*.ts"]
}
